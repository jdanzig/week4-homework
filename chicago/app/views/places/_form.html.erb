<style>
  label { width: 100px; vertical-align: middle;}
</style>

<h2><%= @place.persisted? ? 'Edit' : 'Add a New' %> Place</h2>

<%= form_for @place do |f| %>
  <p><label>Title:</label> <%= f.text_field :title %></p>
  <p><label>Photo URL:</label> <%= f.text_field :photo_url, :size => 80 %></p>
  <p><label>Price:</label> <%= f.text_field :price, :value => (@place.price || 0).to_f / 100.0 %></p>
  <p><label>Description:</label></p>
  <%= f.text_area :desc, :cols => 80, :rows => 3 %>
  <p><%= f.submit :submit %></p>
<% end %>

<style>
  h1 {
    border-bottom: solid 3px gray;
    margin-bottom: 24px;
  }
</style>

<p><%= link_to "Add a New Place", new_place_path %></p>

<ul>

  <% @places.each do |place| %>
    <li>
      <%= link_to place.title, place %>
      (<%= number_to_currency(place.price / 100.0) %>)
      <%= link_to "(delete)", place, :method => :delete %>
    </li>
  <% end %>

</ul>
